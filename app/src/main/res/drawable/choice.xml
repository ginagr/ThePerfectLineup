<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:dither="true"
       android:shape = "rectangle">

    <solid android:color="#ff00ffff" />

    <corners android:radius="15dp" />

    <gradient
        android:centerColor="#737373"
        android:startColor="#4d4d4d"
        android:endColor="#4d4d4d"
        />
    <stroke
        android:dashGap="4dp"
        android:dashWidth="0dp"
        android:width="3dp"
        android:color="#000000" />

    <padding
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp" />

    <size
        android:height = "135dp"
        android:width="280dp" />

</shape>